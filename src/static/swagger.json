        "operationId": "getEstablishmentPDF",
        "parameters": [
          {
            "$ref": "#/components/parameters/pathEstablishmentId"
          }
        ],
        "responses": {
          "200": {
            "description": "Establishment PDF generated",
            "content": {
              "application/pdf": {}
